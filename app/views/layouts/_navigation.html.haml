%ul.topnav
  %li= link_to 'home', root_path, class: 'active'
  - if user_signed_in?
    - if current_user.has_role?(:admin)
      %li= link_to 'users', users_path
      %li= link_to 'roles', roles_path
    %li= link_to 'logout', destroy_user_session_path, class: 'right', method: :delete

  - else
    %li= link_to 'login', user_session_path, class: 'right'
