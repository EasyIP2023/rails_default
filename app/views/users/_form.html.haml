= form_for @user do |f|
  = errors_for @user, false
  
  .row
    .col-sm-12
      .form-group
        = f.label :first_name
        = f.text_field :first_name, placeholder: 'first name', class: 'form-control'
  .row
    .col-sm-12
      .form-group
        = f.label :last_name
        = f.text_field :last_name, placeholder: 'last name', class: 'form-control'
  .row
    .col-sm-12
      .form-group
        = f.label :email
        = f.text_field :email, placeholder: 'email', class: 'form-control', autofocus: true
  .row
    .col-sm-12
      .form-group
        = f.label :phone
        = f.text_field :phone, placeholder: 'xxxxxxxxxx', class: 'form-control'
  - if @user.has_role?(:admin)
    .row
      .col-sm-12
        .form-group
          = f.label 'Roles'
          = f.collection_select :role_ids, Role.all, :id, :name, {prompt: true}, {multiple: true, class: 'form-control selectpicker'}
        .actions.right
          = f.submit 'Submit', class: 'btn btn-success btn-lg'
          \|
          = link_to 'Back', users_path, class: 'btn btn-lg btn-danger'
